<!--pages/ scoreDetails/ scoreDetails.wxml-->
<view class="details">
    <view class="header">
        <image src="{{img}}" />
        <text>{{name}}</text>
        <text>{{role}}</text>
        <text>{{score}}分</text>
    </view>
    <view class="main">
        <view class="score-list" wx:key="{{index}}" wx:for="{{scoreList}}">
            <text>{{item.name}}: <text class="score">{{item.score}}分</text></text> 
        </view>
        <view class="remark">
            <text>备注</text>
            <text>备注备注备注备注备注备注备注备注备注备注备注</text>
        </view>
    </view>
</view>
