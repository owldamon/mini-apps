<!--pages/stepOut/stepOut.wxml-->
<view class="customForm">
    <view class="section">
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
            <view class="picker">
                <view class="name">
                    汇报日期
                    <text class="required">*</text> : 
                </view>
                <view class="content">
                    {{date}}
                </view>
                <image src="/images/icon/icon-right.png" />
            </view>
        </picker>
    </view>
    <view class="section">
        <picker bindchange="bindPickerName" value="{{index}}" range="{{array}}">
            <view class="picker">
                <view class="name">
                    销售活动
                    <text class="required">*</text> :
                </view>
                <view class="content">
                    {{array[nameIndex]}}
                </view>
                <image src="/images/icon/icon-right.png" />
            </view>
        </picker>
    </view>
    <view class="section">
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
            <view class="picker">
                <view class="name">
                    汇报时间
                    <text class="required">*</text> :
                </view>
                <view class="content">
                    {{time}}
                </view>
                <image src="/images/icon/icon-right.png" />
            </view>
        </picker>
    </view>
    <view class="section">
        <picker bindchange="bindPickerReason" value="{{index}}" range="{{reason}}">
            <view class="picker">
                <view class="name">
                    离开理由
                    <text class="required">*</text> :
                </view>
                <view class="content">
                    {{reason[reasonIndex]}}
                </view>
                <image src="/images/icon/icon-right.png" />
            </view>
        </picker>
    </view>
    <view class="section textarea">
        <textarea auto-height placeholder="备注" placeholder-class="input-hold" />
    </view>
    <view class="section img" bindtap="chooseImage">
        <view class="name">
            图片
        </view> 
        <view class="content">
            最多三张
        </view> 
        <image class="icon" src="/images/icon/icon-right.png" />
    </view>
    <view class="user-report">
        <view class="user-title">
            <text>发个谁</text>
            <text>(点击头像删除)</text>
        </view>
        <view class="user-list">
            <view class="list" wx:key="index" wx:for="{{userList}}">
                <image wx:if="{{item.url}}" src="{{item.url}}" />
                <text class="imgName" wx:elif="{{!item.url}}" >{{item.imgName}}</text>
                <text class="name">{{item.name}}</text>
            </view>
            <view class="list" bindtap="addUser">
                <image src="/images/icon/icon-add.png" />
                <text class="name">添加人员</text>
            </view>
        </view>
        
    </view>
    <view class="submit-btn" bindtap="submitTap">
        <text>确认提交</text>
    </view>
</view>
