/* pages/taskDetail/taskDetail.wxss */
.detail {

}
.banner {
    width: 100%;
}
.generaInfo {
    padding: 26rpx 22rpx;
    border-bottom: 1rpx solid #efeff4;
    background: #FFF;
}
.generaInfo .mission-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.generaInfo .mission-title {
    font-size: 32rpx;
    width: 60%;
}
.generaInfo .mission-time {
    font-size: 20rpx;
    color: #999;
}
.generaInfo .mission-add {
    margin: 10rpx 0; 
    display: block;
    color: #666;
    font-size: 28rpx; 
}
.generaInfo .mission-price {
    color:#f76b1c;
}
.company {
    padding: 22rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: #FFF;
}
.company .logo {
    display: block;
    width:100rpx;
    height:100rpx;
}
.company .companyInfo {
    padding-left: 20rpx;
}
.company .companyInfo text:nth-child(1) {
    display: block;
    font-size: 32rpx;
}
.company .companyInfo text:nth-child(2) {
    font-size: 28rpx;
    color: #888;
}
.title {
    width: 100%;
    padding: 22rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #efeff4;
}
.title image{
    width: 42rpx;
    height: 43rpx;
}
.title text {
    padding-left: 10rpx;
    font-size: 32rpx;
}
.content {
    display: flex;
    padding: 22rpx;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    color: #666;
}
.content .content-title {
    width: 20%;
}
.content .content-text {
    width: 80%;
}
.content image {
    width: 16rpx;
    height: 26rpx;
}
.content .content-num {
    width: 100%;
}
.mission-info, .mission-addr, .mission-num {
    margin-top: 10rpx;
    background: #FFF;
}
.bottom-btn {
    display: flex;
    height:98rpx;
    line-height: 98rpx;
    text-align: center;
    font-size: 36rpx;
}
.bottom-btn .apply-btm {
    width: 60%;
    background: -webkit-gradient(linear, 0 0, right 0, from(#ff7300), to(#ffbc00));
    color: #FFF;
}
.bottom-btn .call-btn {
    color:#f76b1c;
    width: 40%;
}