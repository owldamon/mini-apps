/* pages/common/message/message.wxss */
.message {
    padding-top: 10rpx;
}
.message-list {
    display: flex;
    height: 140rpx;
    padding: 0 22rpx;
    align-items: center;
    background: #FFF;
    border-bottom: 1rpx solid #efeff4;
}
.message-list image {
    border-radius:5rpx;
    width:100rpx;
    height:100rpx;   
}
.message-title {
    padding-left: 20rpx;
    width: 60%;
}
.message-title text:nth-child(1){
    width: 100%;
    display: block;
    font-size: 34rpx;
    overflow: hidden; /*自动隐藏文字*/
    text-overflow: ellipsis;/*文字隐藏后添加省略号*/
    white-space: nowrap;/*强制不换行*/
}
.message-title text:nth-child(2){
    width: 100%;
    display: block;
    font-size:26rpx;
    color:#888888;
    overflow: hidden; /*自动隐藏文字*/
    text-overflow: ellipsis;/*文字隐藏后添加省略号*/
    white-space: nowrap;/*强制不换行*/
}
.message-date {
    display: block;
    width: 20%;
    text-align: right;
    font-size: 24rpx;
}