/**app.wxss**/
page {
  background:#efeff4;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: PingFang-SC-Semibold;
} 

.customForm .section {
  display: flex;
  justify-content: left;
  align-items: center;
  min-height: 140rpx;
  background: #FFF;
  border-bottom: 1rpx solid #efeff4;
  padding: 0 22rpx;
}
.customForm .section picker {
  width: 100%;
}
.customForm .section .name{
  font-size: 34rpx;
}
.customForm .section .name text {
  vertical-align: middle;
  color: #FFF;
}
.customForm .section .name .required {
  color: #ff7300;
}
.customForm .section .content {
  padding-left: 20rpx;
  width: 69%;
  text-align: left;
}
.customForm .section image {
  width: 16rpx;
  height: 26rpx;
}
.customForm .picker {
  display: flex;
  justify-content: left;
  align-items: center;
}
.customForm .section input {
  padding-left: 20rpx;
  width: 65%;
}
.customForm .input-hold {
  font-size: 32rpx;
}
.customForm .textarea {
  margin-top: 10rpx;
  min-height: 170rpx; 
}
.customForm .textarea textarea {
  width: 100%;
  height: 170rpx; 
}
.customForm .img {
  padding-right: 40rpx;
  justify-content: space-between;
}
.customForm .img .content {
  text-align: right;
  font-size: 26rpx;
  color: #999;
}
.customForm .user-report {
  margin-top: 10rpx;
  padding-top: 30rpx; 
  background: #FFF;
}
.customForm .user-title {
  padding:0 22rpx;
}
.customForm .user-title text:nth-child(1){
  font-size: 34rpx;
}
.customForm .user-title text:nth-child(2){
  padding-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.customForm .user-list {
  margin: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.customForm .list {
  width: 96rpx;
  height: 110rpx;
  text-align: center;
}
.customForm .list image {
  width: 60rpx;
  height: 60rpx;
}
.customForm .list .imgName {
  margin: 0 auto;
  margin-bottom: 10rpx;
  display: block;
  width: 60rpx;
  height: 60rpx;
  background: #ff7300;
  color: #FFF;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
}
.customForm .list .name {
  display: block;
  font-size: 24rpx;
  color: #999;
}
.customForm .submit-btn {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background: #ff7300;
  color: #FFF;
}